<Window x:Class="MongoDB_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MongoDB_Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Resources>
            <DataTemplate x:Key="BehandlerTemplate">
                <Border CornerRadius="3" BorderBrush="#FF1B4CF1" BorderThickness="1" >
                <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding Uhrzeit}"/>
                        <TextBlock Text="{Binding BehandlerName}"/>
                    <TextBlock Text="{Binding PatientenName}"/>
                </StackPanel>
                </Border>
            </DataTemplate>
            
            <DataTemplate x:Key="TerminTemplate">
                <StackPanel>

                    <TextBlock Text="{Binding Uhrzeit}"/>
                    <TextBlock Text="{Binding Datum}"/>
                    <ListBox ItemsSource="{Binding BehandlerPatientenTermine}" ItemTemplate="{StaticResource BehandlerTemplate}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal">
                                    
                                </StackPanel>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>
                </StackPanel>
            </DataTemplate>
           
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="474*"/>
            <ColumnDefinition Width="71*"/>
            <ColumnDefinition Width="247*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="93*"/>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="67*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dgBook" HorizontalAlignment="Left" Height="282" VerticalAlignment="Top" Width="33" Margin="53,60,0,0" Grid.RowSpan="6" MouseUp="dgBook_MouseUp"/>
        <Label Content="Id" HorizontalAlignment="Left" Margin="16,56,0,0" VerticalAlignment="Top" Width="72" Grid.Column="1" Height="26" Grid.ColumnSpan="2"/>
        <TextBox x:Name="tbId" HorizontalAlignment="Left" Height="23" Margin="22,60,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="198" Grid.Column="2"/>
        <Label Content="Title" HorizontalAlignment="Left" Margin="16,4,0,0" VerticalAlignment="Top" Width="72" Grid.Column="1" Height="26" Grid.ColumnSpan="2" Grid.Row="1"/>
        <TextBox x:Name="tbTitle" HorizontalAlignment="Left" Height="23" Margin="22,8,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="199" Grid.Column="2" Grid.Row="1" RenderTransformOrigin="0.5,0.5">

        </TextBox>
        <Label Content="Price" HorizontalAlignment="Left" Margin="16,8,0,0" VerticalAlignment="Top" Width="72" Grid.Column="1" Height="26" Grid.ColumnSpan="2" Grid.Row="2"/>
        <TextBox x:Name="tbPrice" HorizontalAlignment="Left" Height="23" Margin="22,12,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="198" Grid.Column="2" Grid.Row="2"/>
        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="20" Click="Button_Click"/>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="31" Grid.Column="2" Grid.Row="3" Click="btnAdd_Click"/>
        <Button x:Name="btnUpdate" Content="Update" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="31" Grid.Column="2" Grid.Row="4" Click="btnUpdate_Click"/>
        <Button x:Name="btnDelete" Content="Delete" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="31" Grid.Column="2" Grid.Row="5" Click="btnDelete_Click"/>
        <ListBox x:Name="LBTermine" ItemTemplate="{StaticResource TerminTemplate}"  Height="300" Margin="109,69,0,0" Grid.RowSpan="6" VerticalAlignment="Top" Width="331"/>
       
    </Grid>
</Window>
